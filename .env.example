# Severidades: INFO, WARNING, CRITICAL
ALERTS_MIN_SEVERITY=WARNING

# -----------------------------------------------------------------------------
# Logs e Debug
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
DEBUG_MODE=false

# -----------------------------------------------------------------------------
# Segurança
